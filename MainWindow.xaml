<Window x:Class="Crafty.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crafty"
        mc:Ignorable="d"
        Title="Crafty"
        Height="500" Width="800">
    <Grid>
        <ComboBox x:Name="VersionList" Width="100" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="120,10,0,0"/>
        <TextBox x:Name="Username" Width="100" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0" FontSize="17"/>
        <Button x:Name="Play" Click="PlayEvent" Content="Play" Width="50" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,10,0"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
            <TextBlock HorizontalAlignment="Center" x:Name="DownloadText" FontSize="20"/>
            <ProgressBar x:Name="DownloadBar" Width="400" Height="25"/>
        </StackPanel>
    </Grid>
</Window>
